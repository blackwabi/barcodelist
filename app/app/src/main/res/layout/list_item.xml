<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="@dimen/list_text_size"
        android:id="@+id/list_name"
        android:layout_marginStart="10dp"
        tools:text="Test List"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/article_icon"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_article_black_24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_of_items"
        app:layout_constraintLeft_toRightOf="@+id/list_name"
        tools:text="15"
        android:textSize="@dimen/list_text_size"
        android:layout_marginStart="184dp"
        app:layout_constraintRight_toLeftOf="@+id/article_icon"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintBottom_toBottomOf="@+id/article_icon"
        app:layout_constraintTop_toTopOf="@+id/list_name"/>
</android.support.constraint.ConstraintLayout>