<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:gravity="center"
        android:id="@+id/articleName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="@string/article_name"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:text="@string/save"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:id="@+id/save"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="32dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:gravity="center"
        android:id="@+id/articleCode"
        app:layout_constraintRight_toRightOf="@+id/articleName"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/articleName"
        app:layout_constraintLeft_toLeftOf="@+id/articleName"
        android:hint="@string/article_code"
        app:layout_constraintBottom_toTopOf="@+id/save"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.04000002"/>
</android.support.constraint.ConstraintLayout>